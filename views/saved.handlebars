<!-- Masthead -->


<section class="page-section bg-primary" id="comments">
    <div class="container">

<h1>SAVED</h1>

        <div class="scrap-container" id="scrap-container">
            {{#each saved}}
            <div class="news-div rounded my-3" style="padding:5vh">
                
                    <div class="row">
                        <div class="col-12">
                           
                    <h4>{{link}}</h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                    <h6><strong>{{title}}</strong></h6>
                        </div>

                    </div>
                                        
                    </button>
                                        <div class="card card-body">
                        <form action="/addcomment/{{_id}}" method="POST">

                                <div class="form-group row">
                                        <div class="col-10">
                                        <input class="form-control"  id="comment" name="comment" placeholder="Add a comment"></input>
                                        </div>
                                    
                                        <div class="col-2" >
                                        <button id="submit" type="submit" class="btn btn-primary btn-block"><i class="fa fa-comment-o" aria-hidden="true"></i></button>
                                        </div>
                                </div>
                        {{#each comments}}
                    <div class=" row">
                        <div class="col-10">
                            <input class="form-control" type="text" value="{{this}}" readonly>
                        </div>

                        <div class="col-2">
                        <form  action="/deletecomment/{{../_id}}/{{@index}}" method="POST">
                            <button type="submit" class="btn btn-danger btn-block"><i class="fa fa-trash-o" aria-hidden="true"></i>
                                </button>
                        </form>
                        </div>
                        

                    </div>
                    <hr>
                    {{/each}}
                                
                        </form>
                    </div>



               



                


                
            </div>
            {{/each}}
        </div>
    </div>
</section>